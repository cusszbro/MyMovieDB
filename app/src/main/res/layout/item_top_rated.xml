<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_top_rated"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_movie_top_rated"
            android:layout_width="130dp"
            android:layout_height="150dp"
            tools:src="@tools:sample/backgrounds/scenic"
            tools:contentDescription="Image movie top rated"/>

        <TextView
            android:id="@+id/tv_title_top_rated"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textSize="16sp"
            android:shadowColor="@color/white"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:scrollHorizontally="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/tv_rate_top_rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:shadowColor="@color/white"
            tools:text="Rated : 10.0"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_item_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:shadowColor="@color/white"
            android:text="Release date :"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_release_top_rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_regular"
            android:shadowColor="@color/white"
            tools:text="28-10-1975"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>